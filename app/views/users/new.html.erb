<div class="row">
	<div class="small-12 columns">
		<%= form_for(@user, url:{action: "create"}) do |f| %>
			<%= f.label(:name, "Username") %>
			<%= f.text_field(:name) %>
			<%= f.label(:password, "Password") %>
			<%= f.password_field(:password) %>
			<%= f.label(:re_password, "Re-enter Password") %>
			<%= f.password_field(:re_password) %>
			<%= submit_tag("Register") %>
		<% end %>
	</div>
</div>